<?xml version="1.0" encoding="utf-8" ?>
<mvvm:ViewBase xmlns="http://xamarin.com/schemas/2014/forms"
               xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
               xmlns:mvvm="clr-namespace:TinyMvvm.Forms;assembly=TinyMvvm.Forms"
               xmlns:vm="clr-namespace:ClassicForms.ViewModels"
               x:Class="ClassicForms.Views.HomePage" x:TypeArguments="vm:HomeViewModel"
               Title="{Binding Title}">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="TinyMvvmExtensions Home Page"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
        </StackLayout>
    </ContentPage.Content>
</mvvm:ViewBase>