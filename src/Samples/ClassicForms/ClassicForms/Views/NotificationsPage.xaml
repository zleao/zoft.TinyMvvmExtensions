<?xml version="1.0" encoding="utf-8" ?>
<mvvm:ExtendedPage xmlns="http://xamarin.com/schemas/2014/forms"
                   xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                   xmlns:mvvm="clr-namespace:zoft.TinyMvvmExtensions.Forms;assembly=zoft.TinyMvvmExtensions.Forms"
                   xmlns:vm="clr-namespace:ClassicForms.ViewModels"
                   x:Class="ClassicForms.Views.NotificationsPage" x:TypeArguments="vm:NotificationsViewModel"
                   Title="{Binding Title}">
    <ContentPage.Content>
        <StackLayout>
            <Button Text="ErrorNotification" 
                    Command="{Binding ErrorNotificationCommand}"/>
            <Button Text="QuestionNotification" 
                    Command="{Binding QuestionNotificationCommand}"/>
            <Button Text="DelayedNotification" 
                    Command="{Binding DelayedNotificationCommand}"/>
        </StackLayout>
    </ContentPage.Content>
</mvvm:ExtendedPage>